<body style="background-color:rgb(47, 79, 79);">
<% if Helpers.is_logged_in?(session) %>
<h1>Add a New Venue!</h1>

<form action="/venues" method="POST">
  <label> Venue Name </label>
  <input type="text" name="venue[name]"> </br>

  <label> City/Locale </label>
  <input type="text" name="venue[city]"> </br>
  
  <% @user.performers.each do |per| %>
  <input type="checkbox" name="venue[performer_ids][]" id="<%= per.id %>" value="<%= per.id %>"><%= per.name %><br>
<% end %>

  <h3>Create New Performer:</h3>
  <label>Performer Name: </label>
  <br>
  <input type="text" name="performer[name]" id="name"></input>
  <br>
  <label>Performer Genre: </label>
  <br>
  <input type="text" name="performer[genre]" id="genre"></input>
  <br><br>
 
  <input type="submit" value="Create">
</form>
</body>
  <% else %>
    You Must <a href="/">Log In</a> to Do This
  <% end %>